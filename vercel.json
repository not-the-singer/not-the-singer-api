{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/soundcloud.js": {
      "runtime": "edge",
      "memory": 1024,
      "maxDuration": 10
    },
    "api/soundcloud/refresh.js": {
      "runtime": "edge",
      "memory": 1024,
      "maxDuration": 10
    },
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
